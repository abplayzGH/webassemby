{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Emscripten compile to html",
            "type": "shell",
            "command": "emcc ${file}-o ${fileBasename}.html"
        },
        {
            "label": "Emscripten compile to js",
            "type": "shell",
            "command": "emcc ${file}-o ${fileBasename}.js"
        }
    ],
    "version": "2.0.0"
}